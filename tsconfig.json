{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@/*": ["*"],
      "@/components/*": ["components/*"],
      "@/constants/*": ["constants/*"],
      "@/types/*": ["types/*"],
      "@/utils/*": ["utils/*"],
      "@/store/*": ["store/*"],
      "@/lib/*": ["lib/*"],
      "@/hooks/*": ["hooks/*"]
    },
    "lib": ["dom", "dom.iterable", "es2020"],
    "allowJs": true,
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "noImplicitAny": false,
    "noImplicitReturns": false,
    "noImplicitThis": false
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ],
  "exclude": [
    "node_modules",
    "__tests__",
    "focusflow-backend"
  ]
}
