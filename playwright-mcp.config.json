{
  "name": "FocusFlow MCP Server",
  "version": "1.0.0",
  "description": "Playwright MCP server configuration for FocusFlow app automated testing",
  "server": {
    "command": "npx",
    "args": ["@playwright/mcp@latest"],
    "env": {
      "PLAYWRIGHT_MCP_PORT": "8081",
      "PLAYWRIGHT_MCP_HOST": "localhost"
    }
  },
  "browser": {
    "type": "chromium",
    "headless": false,
    "devtools": false,
    "slowMo": 0,
    "timeout": 30000
  },
  "permissions": {
    "allowedOrigins": [
      "http://localhost:8080",
      "http://localhost:8081",
      "https://localhost:8080",
      "https://localhost:8081",
      "exp://localhost:8080",
      "exp://localhost:8081",
      "http://192.168.*:8080",
      "http://192.168.*:8081"
    ],
    "blockedOrigins": [],
    "allowFileAccess": true,
    "allowNetworkAccess": true
  },
  "capabilities": {
    "tabs": true,
    "pdf": true,
    "history": true,
    "wait": true,
    "files": true,
    "install": true
  },
  "testing": {
    "baseURL": "http://localhost:8080",
    "timeout": 30000,
    "retries": 2,
    "workers": 1,
    "fullyParallel": false,
    "forbidOnly": false,
    "use": {
      "browserName": "chromium",
      "headless": false,
      "viewport": {
        "width": 1280,
        "height": 720
      },
      "ignoreHTTPSErrors": true,
      "video": "retain-on-failure",
      "screenshot": "only-on-failure"
    }
  },
  "projects": [
    {
      "name": "chromium-desktop",
      "use": {
        "browserName": "chromium",
        "viewport": {
          "width": 1280,
          "height": 720
        }
      }
    },
    {
      "name": "mobile-chrome",
      "use": {
        "browserName": "chromium",
        "viewport": {
          "width": 375,
          "height": 667
        },
        "isMobile": true,
        "hasTouch": true
      }
    },
    {
      "name": "tablet-chrome",
      "use": {
        "browserName": "chromium",
        "viewport": {
          "width": 768,
          "height": 1024
        },
        "isMobile": true,
        "hasTouch": true
      }
    }
  ]
}